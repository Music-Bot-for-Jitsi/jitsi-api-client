{
  "tasks": {
    "run": "deno run --location=https://jimmi.xyz/fake/ --allow-read --allow-net --allow-env",
    "run:cli": "deno task run -- examples/cli.ts"
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
